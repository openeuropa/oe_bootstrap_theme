{#
/**
 * @file
 * Theme override to display the 'featured_media' type paragraph.
 *
 * @see ./modules/contrib/paragraphs/templates/paragraph.html.twig
 */
#}

{% if image %}
  {% set _image = {
    '#theme': 'image',
    '#uri': image.src,
    '#alt': image.alt,
  } %}
{% endif %}

{% if content.field_oe_text_long['#items'] %}
  {% set inside_text = true %}
{% endif %}

{{ pattern('featured_media', {
  'inside_text': inside_text,
  'embedded_media': embedded_media,
  'image': _image ? _image|render : '',
  'poster_image': poster_image,
  'content': content,
  'ratio': ratio,
  'sources': sources,
  'tracks': tracks,
  'alignment': alignment,
}) }}
