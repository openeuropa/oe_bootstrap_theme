{#
/**
 * @file
 * Template primary and secondary local tasks.
 */
#}
{% if primary %}
  <h2 class="visually-hidden">{{ 'Primary tabs'|t }}</h2>
  {{ pattern('navigation', {
    'variant': 'tabs',
    'items': primary,
  }) }}
{% endif %}

{% if secondary %}
  <h2 class="visually-hidden">{{ 'Secondary tabs'|t }}</h2>
  {{ pattern('navigation', {
    'variant': 'pills',
    'items': secondary,
  }) }}
{% endif %}
