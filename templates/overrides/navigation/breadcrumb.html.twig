{#
/**
 * @file
 * Override for breadcrumb trail.
 */
#}
{% set _breadcrumb_links = {} %}
{% for breadcrumb_item in breadcrumb %}
  {% set item = breadcrumb_item|merge({
    'label': breadcrumb_item.text,
    'path': breadcrumb_item.url,
  }) %}
  {% set _breadcrumb_links = _breadcrumb_links|merge([item]) %}
{% endfor %}

{% if _breadcrumb_links %}
  {{ pattern('breadcrumb', {
    'items': _breadcrumb_links,
    'attributes': {
      'class': [
        'mt-3'
      ],
      'aria-label': "breadcrumb"
    }
  }) }}
{% endif %}
