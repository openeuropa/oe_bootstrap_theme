{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% if attributes.hasClass('button--primary') or (attributes['data-drupal-selector'] == 'edit-submit') %}
  {% set attributes = attributes.addClass(['btn-primary']) %}
{% else %}
  {% set attributes = attributes.addClass(['btn-secondary']) %}
{% endif %}
{% if attributes.disabled == 'disabled' %}
  {% set attributes = attributes.addClass(['disabled']) %}
{% endif %}
{% if element['#pattern'] is defined and element['#pattern'] is same as(true) %}
  {{ pattern('button', {
    'variant': element['#variant'],
    'type': element['#fields']['settings']['type'],
    'icon': element['#fields']['icon'],
    'label': element['#fields']['label'],
    'attributes': attributes.addClass(element['#attributes']['class']),
  }) }}
{% else %}
  <input{{ attributes.addClass(['btn']) }} />{{ children }}
{% endif %}
