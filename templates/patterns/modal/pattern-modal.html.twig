{#
/**
 * @file
 * Modal component.
 */
#}

{% set _modal_id = modal_id ? 'modal_' ~ modal_id : 'modal' %}

{% if btn_label is not empty %}
{% block trigger %}
  {{ pattern('button', {
    label: btn_label,
    style: btn_style,
    outline: btn_outline,
    size: btn_size,
    attributes: create_attribute({
      'data-bs-toggle': 'modal',
      'data-bs-target': '#' ~ _modal_id
    })
  }) }}
{% endblock %}
{% endif %}

{% include '@oe-bcl/modal' with {
  'size': size,
  'id': _modal_id,
  'header': header,
  'body': body,
  'footer': footer
} %}
