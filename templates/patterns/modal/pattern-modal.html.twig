{#
/**
 * @file
 * Modal pattern.
 */
#}
{% set _modal_id = 'modal-' ~ random(1000) %}

{% if button is not empty %}
{% block trigger %}
  {{ pattern('button', {
    label: button.label,
    variant: button.variant,
    outline: btn_outline,
    size: btn_size,
    attributes: create_attribute({
      'data-bs-toggle': 'modal',
      'data-bs-target': '#' ~ _modal_id
    })
  }) }}
{% endblock %}
{% endif %}

{% include '@oe-bcl/modal' with {
  'size': size,
  'id': modal_id,
  'header': header,
  'body': body,
  'footer': footer
} only %}
