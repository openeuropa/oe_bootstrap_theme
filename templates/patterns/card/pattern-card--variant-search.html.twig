{#
/**
 * @file
 * Card pattern search variant.
 *
 * Differences to main variant:
 *   - Always use horizontal layout, with specific classes.
 *   - Add extra classes on card body (right column), to prevent padding.
 *     This should probably be handled by BCL if horizontal is used.
 *   - Use text color dark.
 *   - Set different margin-bottom for text element.
 *   - Set special parameters on the image.
 *   - Add special wrapper attributes.
 *   - Ignore 'subtitle', 'date', 'card_header', 'card_footer'.
 */
#}
{% spaceless %}
{% include '@oe-bcl/card' with {
  'horizontal': true,
  'horizontal_grid': {
    left_col_classes: 'col-md-3 col-lg-2 rounded mw-listing-img',
    right_col_classes: 'col-md-9 col-lg-10',
  },
  'extra_classes_body': 'p-0 pb-md-0 pb-3',
  'title': (title is not empty) ? {
    'content': title,
  } : {},
  'text': (text is not empty) ? {
    'content': text,
    'classes': 'mb-3',
    'tag': 'div',
  } : {},
  'text_color': 'dark',
  'content': content,
  'image': (image is not empty) ? image|merge({
    position: 'top',
    classes: 'd-none d-md-block',
  }) : {},
  'badges': badges,
  'attributes': (attributes ?? create_attribute()).addClass([
    'listing-item',
    'border-bottom',
    'border-md-0',
    'border-0',
  ]),
} only %}
{% endspaceless %}
