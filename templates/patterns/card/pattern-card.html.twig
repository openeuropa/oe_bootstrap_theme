{#
/**
 * @file
 * Card pattern.
 */
#}
{% spaceless %}
{% if title is not empty %}
  {% set title = {
    'content': title,
  } %}
{% endif %}
{% if subtitle is not empty %}
  {% set subtitle = {
    'content': subtitle,
    'classes': 'mb-2',
  } %}
{% endif %}
{% if text is not empty %}
  {% set text = {
    'content': text,
    'classes': 'mb-2',
    'tag': 'div'
  } %}
{% endif %}
{% if orientation == 'horizontal' %}
  {% set horizontal_grid = {
    left_col_classes: 'col-4',
    right_col_classes: 'col-8',
    gutter: 0
  } %}
{% endif %}
{% include '@oe-bcl/card' with {
  'horizontal': orientation == 'horizontal',
  'horizontal_grid': horizontal_grid,
  'title': title,
  'subtitle': subtitle,
  'text': text,
  'content': content,
  'image': image,
  'card_header': header,
  'card_footer': footer,
  'badges': badges,
  'date': date,
  'attributes': attributes,
} only %}
{% endspaceless %}
