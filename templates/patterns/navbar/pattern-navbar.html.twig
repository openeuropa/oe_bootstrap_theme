{#
/**
 * @file
 * Navbar pattern.
 */
#}

{% extends '@oe-bcl/navbar' %}

{% set color_set = color_scheme|default('light') %}
{% if background ?? true %}
  {% set background = color_set %}
{% endif %}
{% set expand = expanded_breakpoint|default('lg') %}

{% block branding %}
  {% if branding is not empty %}
    {{ branding }}
  {% endif %}
{% endblock %}

{% block navigation %}
  <div class="me-auto navbar-nav">
    {{ navigation }}
  </div>
{% endblock %}

{% block right %}
  {% if right is not empty %}
    <div class="d-flex">
      {{ right }}
    </div>
  {% endif %}
{% endblock %}
