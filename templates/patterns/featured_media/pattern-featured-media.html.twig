{# Backward compatibily setting: load legacy pattern template. #}
{% if bc_featured_media_use_legacy_pattern %}
  {%- include '@oe_bootstrap_theme/patterns/featured_media/featured-media-legacy.html.twig' -%}
{% else %}
  {% include '@oe-bcl/featured-media' with {
    'embedded_media': embedded_media,
    'image': image,
    'ratio': ratio,
    'alignment': text_position == 'right' ? 'left' : 'right',
    'content': caption,
    'content_classes': 'bg-light p-3',
    'attributes': attributes,
    'with_text': subtitle or text or link,
    'title': title,
    'title_tag': title_tag,
    'description_title': subtitle,
    'description_title_tag': 'h5',
    'description_title_attributes': create_attribute().addClass('text-secondary'),
    'description': text,
    'read_more': link,
    'force_wrapper': true,
  } only %}
{% endif %}
