{#
/**
 * @file
 * Button pattern.
 */
#}
{%  if icon %}
  {% set _icon = {
    path: bcl_icon_path,
    name: icon,
  } %}
{% endif %}
{% include '@oe-bcl/button' with {
  'label': label,
  'variant': variant,
  'size': size,
  'type': type,
  'outline': outline,
  'disabled': disabled|default(attributes.disabled),
  'icon': _icon,
  'icon_position': icon_position,
  'attributes': attributes,
} only %}
