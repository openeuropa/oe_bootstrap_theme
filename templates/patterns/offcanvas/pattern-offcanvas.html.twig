{#
/**
 * @file
 * offcanvas.
 */
#}
{% include '@oe-bcl/offcanvas' with {
  'title': title,
  'placement': placement,
  'id': offcanvas_id,
  'body': body,
  'with_body_scroll': with_body_scroll,
  'with_backdrop': with_backdrop,
  'extra_classes_body': extra_classes_body,
  'extra_classes_header': extra_classes_header,
  'extra_classes_close': extra_classes_close,
  'toggle_button_label': toggle_button_label,
} %}
{% if with_trigger %}
  {%  if icon %}
    {% set _icon = icon|merge({
      path: bcl_icon_path
    })  %}
  {% endif %}
  {{ pattern('button', {
    label: toggle_button_label ?: 'Toggle offcanvas',
    variant: 'light',
    size: 'md',
    icon: _icon,
    icon_position: icon_position,
    attributes: {
      'data-bs-toggle': 'offcanvas',
      'data-bs-target': '#' ~  offcanvas_id,
      'aria-controls': offcanvas_id,
      'class': [
        'd-lg-none',
        'w-100',
        'mb-4',
      ],
    }
  }) }}
{% endif %}
