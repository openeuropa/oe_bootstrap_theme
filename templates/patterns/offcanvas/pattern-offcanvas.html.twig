{#
/**
 * @file
 * offcanvas.
 */
#}
{% include '@oe-bcl/offcanvas' with {
  'title': title,
  'placement': placement,
  'id': offcanvas_id,
  'body': body,
  'with_body_scroll': with_body_scroll,
  'with_backdrop': with_backdrop,
  'extra_classes_body': extra_classes_body,
  'extra_classes_header': extra_classes_header,
  'extra_classes_close': extra_classes_close,
  'toggle_button_label': toggle_button_label,
} %}
{% if with_trigger %}
  <button class="d-lg-none w-100 mb-4 btn btn-primary btn-md" type="button" data-bs-toggle="offcanvas" data-bs-target="#{{ offcanvas_id }}" aria-controls="{{ offcanvas_id }}">
    {{ toggle_button_label ?: 'Toggle offcanvas' }}
    {% if icon_name %}
      {{ pattern('icon', {
        name: icon_name,
        path: bcl_icon_path
      }) }}
    {% endif %}
  </button>
{% endif %}
