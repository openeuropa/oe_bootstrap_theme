{#
/**
 * @file
 * Button-group pattern.
 */
#}
{% set buttons = [] %}
{% for _items_group in items %}
  {% for _item in _items_group %}
    {% set _item = _item|merge({
      'variant': _item.style ?? 'primary'
    }) %}
    {% set buttons = buttons|merge([_item]) %}
  {% endfor %}
{% endfor %}

{% include '@oe-bcl/button-group' with {
  'toolbar': toolbar,
  'vertical': vertical,
  'size': size,
  'toolbar_aria_label': toolbar_aria_label,
  'aria_label': aria_label,
  'items': [buttons]
} only %}
